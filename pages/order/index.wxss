.order-main .order_item {
  padding: 20rpx;
  border-bottom: 1px solid #ccc;
  color: #666;
}
.order-main .order_item .order_no_row {
  display: flex;
  padding: 10rpx 0 ;
  justify-content: space-between;
}
.order-main .order_item .order_price_row {
  display: flex;
  padding: 10rpx 0 ;
  justify-content: space-between;
}
.order-main .order_item .order_price_row .order_price_value {
  color: var(--themeColor);
  font-size: 32rpx;
}
.order-main .order_item .order_time_row {
  display: flex;
  padding: 10rpx 0 ;
  justify-content: space-between;
}
